  "swagger":"2.0",
  "info": {
    "description": "This is the API spec for the United Airlines oversale solicitation project. This project was created by group 5 in the ITWS-4100 class for Fall 2020.",
    "version": "1.0.0",
    "title": "United Airlines Oversale Solicitation Project API",
    "contact": {
      "email": "deahln@rpi.edu"
    },
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },

  "basePath": "/api",

  "tags": [
    {"name":"Users", "description":"User account operations and authentication"}
  ],

  "paths":{
    "/users": {
      "post": {
        "tags": ["Users"],
        "summary": "Creates a user",
        "description":"Verifies and adds a user to the system",
        "consumes": "application/json",
        "produces": "application/json",
        "parameters":[{
          "in":"body",
          "name":"body",
          "description":"User information that needs to be added",
          "required":true,
          "schema":{"$ref":"#/definitions/User"}
        }],
        "responses":{"405":{"description":"Invalid input"}}
      },
      "put": {
        "tags": ["Users"],
        "summary": "Modifies a user",
        "description":"Updates user information"
      },
      "delete": {
        "tags": ["Users"],
        "summary": "Removes a user",
        "description":"Removes a specified user from the system"
      }
    },
    "/login": {
      "post": {
        "tags": ["Users"],
        "summary": "Authenticates a user",
        "description":"Checks user credentials to allow them access to the application"
      }
    }  
  },

  "definitions": {
    "User":{
      "type":"object",
      "required":["username","password"],
      "properties":{
        "username": {"type": "string"},
        "password": {"type": "string"}
      }
    } 
  }

}

